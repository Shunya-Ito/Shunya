<%= stylesheet_link_tag 'societies', :media => "all" %>
<div class= "center">新規登録(楽団)</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :楽団名 %><br />
    <%= f.text_field :name,size: 50 %>
  </div> 

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :欲しい楽器 %><br />
    <%= f.text_field :wants,size: 100 %>
  </div>

  <div class="field">
    <%= f.label :活動内容 %><br />
    <%= f.text_field :activity,size: 100 %>
  </div>

  <div class="field">
    <%= f.label :楽団所持楽器 %><br />
    <%= f.text_field :have,size: 100 %>
  </div>
 
  <div class="field">
    <%= f.label :活動地域 %><br />
    <%= f.radio_button :region, :"東京"%>
    <%= f.label :region, "東京" %>
    <%= f.radio_button :region, :"神奈川" %>
    <%= f.label :region, "神奈川" %>
    <%= f.radio_button :region, :"埼玉" %>
    <%= f.label :region, "埼玉" %>
    <%= f.radio_button :region, :"千葉" %>
    <%= f.label :region, "千葉" %>
  </div> 

  <div class="field">
    <%= f.label :活動写真 %><br />
    <%= f.file_field :image,size: 50 %>
    <img src=<%= @society.image %> class = "activity_image">
  </div> 
  <div class="field">
    <%= f.label :その他 %><br />
    <%= f.text_field :other,size: 100 %>
  </div> 


  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(最低<%= @minimum_password_length %>文字)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>


